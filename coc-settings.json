{
    // move type definitions and errors to status line
    "coc.preferences.hoverTarget": "echo",
    "signature.target": "echo",
    "diagnostic.messageTarget": "echo",
    "suggest.floatEnable": false,

    // prettier
    //"prettier.onlyUseLocalVersion": true,
    "prettier.requireConfig": true,

    // eslint
    "eslint.filetypes": [
     //   "javascript",
     //   "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.autoFixOnSave": true,

    // scala
    "metals.javaHome": "/Library/Java/JavaVirtualMachines/adoptopenjdk-11.jdk/Contents/Home",

    "coc.preferences.formatOnSaveFiletypes": ["elm", "typescript", "typescriptreact", "haskell"],

    // Language Servers
    "languageserver": {
        "elmLS": {
          "enable": true,
          "command": "elm-language-server",
          "filetypes": ["elm"],
          "rootPatterns": ["elm.json"],
          "trace.server": "verbose",
          "initializationOptions": {
            "elmFormatPath": "elm-format",
            "elmAnalyseTrigger": "save"
          }
        },
        "haskell": {
            "command": "hie-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                "*.cabal",
                ".stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true
                }
            }
        }
    }
}
